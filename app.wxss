/**app.wxss**/

page{
	height:100%;
	background-color: #f6f6f6;
	font-family: "微软雅黑";
}

/*重点，去除scroll-view 滚动条*/
::-webkit-scrollbar{
	width:0;
	height:0;
	color:transparent
}

.buy-container{
	position:fixed;
	width:100%;
	height: 110rpx;
	background-color:#fc3b22;
	color:#fff;
	bottom:0;
	left:0;
	
}

.b-price{
	display: inline-block;
	font-size: 38rpx;
	height: 100%;
	margin-left: 82rpx;
	line-height: 108rpx;
}

.b-btn{
	display:inline-block;
	position:absolute;
	font-size:34rpx;
	border:2rpx solid #fff;
	border-radius:24rpx;
	text-align:center;
	letter-spacing:3rpx;
	right:80rpx;
	top:22rpx;
	width:232rpx;
	height:70rpx;
	line-height:64rpx;
	box-sizing:border-box;
}



/*订单信息css*/

.my-order-contianer{
	padding-left:20rpx;
	padding-right:20rpx;
	background-color: #fff;
}
.my-order-contianer-1{
	background-color: #fff;
}

.my-order-message{
	width:100%;
	display: flex;
	flex-flow:row wrap;
}



.my-order-item{
	flex: 1 100%;
}

.order-data{
	height:70rpx;
	padding-top:20rpx;
	color:#686868;
	font-size: 24rpx;
	box-sizing: border-box;
}

.order-icon{
	height:180rpx;
	padding-bottom: 20rpx;
	padding-right:20rpx;
	box-sizing: border-box;
}
.order-icon-img{
	width:160rpx;
	height:160rpx;
}

.o-m-title{
	margin-bottom:20rpx;
	color:#292828;
	font-size: 28rpx;
}

.o-m-start-data{
	margin-bottom:20rpx ;
	color:#686868;
	font-size: 24rpx;
}
.o-m-number{
	
	color:#292828;
	font-size: 28rpx;
	
}

.order-status{
	border-top:1px solid #e1e1e1;
	box-sizing: border-box;
	padding:22rpx 0 24rpx 0;
	height: 101rpx;
	box-sizing:border-box;
	min-height: 101rpx;
}

.fr{
	float:right
}

.all-count{
	color:#fc3b22;
}


button{
position:inherit;
display:block;
margin-left:0;
margin-right:0;
padding-left:0;
padding-right:0;
box-sizing:border-box;
font-size:0;
text-align:0;
text-decoration:none;
line-height:1.5;
border:none;
border-radius:none;
-webkit-tap-highlight-color:none;
overflow:none;
color:none;
}

button:after{
    width:0;
    height:0;
}


.error{
    color:#999;
    font-size: 28rpx;
    padding-top:360rpx;
    text-align: center;
    
}

.error image{
    width:194rpx;
    height: 194rpx;
    display: block;
    margin-left:auto;
    margin-right:auto;

}

.line-all{
    width: 100%;
    border-top:1px solid #dfdfdf
}
