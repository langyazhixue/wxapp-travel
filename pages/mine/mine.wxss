
@import '../../template/mine/mine.wxss';

.userInfo{
	width:750rpx;
	height:458rpx;
	background-image: url("http://opnxrafks.bkt.clouddn.com/xiaoxiao.jpg");
	background-repeat: no-repeat; 
	background-size:100% 100%;
	background-position: center top;
	position:relative;
}

.tabchange{
	width:100%;
	height:84rpx;
	background:linear-gradient(90deg,#97b8d7,#5881ad) ;
	display: flex;
	position:absolute;
	bottom:0;
}

.my-order,.info{
	width:49%;
	text-align: center;
	color:#fff;
	margin-top:20rpx;
	position:relative;
}
.line{
	width: 2%;
	margin-top:20rpx;
	color:#fff;
}

.trigger{
	width:0;
	height: 0;
	border-left:15rpx solid transparent;
	border-right:15rpx solid transparent;
	border-bottom:20rpx solid #fff;

}
.pos{
	position:absolute;
	left:171rpx;
	bottom:0;
}
.userinfo-avatar {
	width:190rpx;
    height:190rpx;
    color:#fff;
    font-size:36rpx;
    text-align:center;
    letter-spacing:10px;
    border-radius:50%;
    margin-top:68rpx;
    margin-left:280rpx;
}


.userinfo-nickname{
	margin:50rpx auto 0 auto;
	color:#fff;
	font-size: 36rpx;
	text-align: center;
}


.info-container{
	padding-left:20rpx;
	padding-right:30rpx;
	background-color: #fff;
}
.info-view{
	padding-top:36rpx;
	padding-bottom: 36rpx;
	font-size:28rpx;
	color:#282828;
	display: flex;
