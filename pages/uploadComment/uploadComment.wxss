.btn {
  display: inline-block;
  font-weight: normal;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  border-style: solid;
  white-space: nowrap;
  padding: 19rpx 51rpx;
  font-size: 34rpx;
  line-height: 34rpx;
  border-width: 2rpx;
  border-radius: 24rpx;
}
.btn-default {
  color: #fc3b22;
  background-color: #fff;
  border-color: #fff;
}
page {
  background-color: #f6f6f6;
}
.title {
  background-color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #e1e1e1;
}
.title .icon {
    width: 160rpx;
    height: 160rpx;
    margin-right: 26rpx;
}

.title .icon image {
    width: 160rpx;
    height: 160rpx;
}

.title .score {
    height: 160rpx;
}

.title .score .score-t {
  font-size: 30rpx;
  color: #282828;
  margin-bottom: 10rpx;
  margin-left:20rpx;
}



.star-image {
 position:relative;
 width:88rpx;
 height: 88rpx;
 src: "../../images/normal.png";
}
 
 
.item {
 position: absolute;
 top:0rpx;
 width: 44rpx;
 height: 88rpx;
 
}

.title .score .star image {
  width: 88rpx;
  height: 88rpx;
  margin-right: 10rpx;
}


.form {
  background-color: #fff;
}
.form .t-holder {
  font-size: 28rpx;
  color: #686868;
}
.form .holder {
  width: 100%;
  height: 350rpx;
  font-size: 28rpx;
  color: #282828;
  margin-bottom: 50rpx;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
}
.form .add-i {
  padding: 0 22rpx 40rpx 22rpx;
  height: 160rpx;
  display: flex;
  justify-content:flex-start;
}
.form .add-i .add {
  width: 160rpx;
  height: 100%;
}
.form .add-i .add image {
  width: 160rpx;
  height: 160rpx;
}
.form .add-i .img-item {
  margin-left: 20rpx;
  width: 160rpx;
  height: 160rpx;
  display: block;
  position: relative;
}
.form .add-i .img-item .img-img {
  width: 160rpx;
  height: 160rpx;
  
}
.form .add-i .img-item .delete {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  color: #fff;
  background-color: #afafaf;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  z-index: 100;
}
.form .submit {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
}
.form .submit button {
  background-color: #fc3b22;
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
}

