

/*index_push style (travle & visa)*/

.push{
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    margin-top: 20rpx;
    flex-wrap: wrap;
}
.ip-travel-product{
    display: flex;
    justify-content:space-between;
    padding-left:14rpx;
    padding-right:14rpx;
    flex-wrap:wrap;
}

.ip-product{
    width: 344rpx;
    background-color: #fff;
}

.ip-product-img{
    width:100%;
    height:344rpx;
    display:block;
}

.ip-product-exp{
    width:100%;
    background-color: #fff;
    padding:20rpx 20rpx  24rpx 14rpx;
    font-size: 22rpx;
    box-sizing:border-box;
    
}

.ip-pro-title{
    font-size: 26rpx;
    color:#282828;
}

.ip-pro-introduce{
    margin-top:22rpx;
}

.ip-pro-price{
    display: inline-block;
    color:#fc3b22;
    font-size:28rpx;
}

.ip-pro-num{
    display: inline-block;
    float:right;
    color:#999999;
    font-size:24rpx;
}


