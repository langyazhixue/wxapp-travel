

/*签证套餐*/

.visa-type{
    margin-top:30rpx;
}

.visa-type-title,.mdtt{
    font-size:28rpx;
    color:#282828;
    margin-left:25rpx;
}

.visa-type-type{
    display: flex;
    justify-content:space-between;
    width: 100%;
    font-size: 28rpx;
    margin-top:20rpx;
    box-sizing: border-box;
}

.add-cut{
    padding:10rpx;
    display: flex;
    justify-content: space-between;
}
.visa-type-type view{
    width: 45%;
    box-sizing: border-box;
    text-align: center;
    height: 78rpx;
    line-height: 76rpx;
    border-radius: 6rpx;
    overflow-x:scroll;
    white-space:nowrap;

}

.no-checked{
    border:1rpx solid #686868;
    color:#686868;
    background-color: #fff;
}
.checkednow-c{
    background-color: #fc3b22;
    color:#ffffff;
    border:none;
}
.checkednow{
    background-color: #fc3b22;
    color:#fff;
    border:none;
}

.multiple-detail{
    margin-top:30rpx;
}


.mdtn{
    width:100%;
    display: flex;
    justify-content: space-between;
    font-size: 30rpx;
    margin:20rpx 0rpx;
    
}

.mdtn view{
    width:200rpx;
    box-sizing: border-box;
    text-align: center;
    height: 68rpx;
    line-height: 66rpx;
    border-radius: 6rpx;
    margin:0rpx 10rpx;
     overflow-x:scroll;
    white-space:nowrap;
}


/*签证内容*/
.vcm{
    padding-left:30rpx;
    line-height:48rpx ;
    font-size: 28rpx;
    vertical-align: top;
    color:#686868;
    position:relative;
    text-align: left;
    padding-right:25rpx;
}


.vcm-i{
    width: 0;
    height: 0;
    border-top:10rpx solid transparent;
    border-bottom:10rpx solid transparent;
    position: absolute;
    top:14rpx;
    left:0;
}

.vcm-i-d{
    border-left:12rpx solid #b1b1b1;
}

.vcm-i-l{
    border-left:12rpx solid #d4d4d4;
}


.t-c{
    width:16rpx;
    height: 16rpx;
    position: absolute;
    display: block;
}

.tl-t{
    border-left:1rpx solid #b0b0b0;
    border-top:1rpx solid #b0b0b0;
    top:0;
    left:0
}

.tr-t{
    border-top:1rpx solid #b0b0b0;
    border-right:1rpx solid #b0b0b0;
    top:0;
    right:0;
}

.tl-b{
    border-left:1rpx solid #b0b0b0;
    border-bottom:1rpx solid #b0b0b0;
    left:0;
    bottom:0;
}

.tr-b{
    border-right:1rpx solid #b0b0b0;
    border-bottom:1rpx solid #b0b0b0;
    right:0;
    bottom:0
}




